modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.development]
SQLITE_URL = "file:./dev.db"

[userenv.production]
SQLITE_URL = "file:./dev.db"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Dev Server"

[[workflows.workflow]]
name = "Next.js Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ecommerce-app && SQLITE_URL=\"file:./dev.db\" npm run dev -- -p 5000 -H 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start", "--prefix", "ecommerce-app", "--", "-p", "5000", "-H", "0.0.0.0"]
build = ["npm", "run", "build", "--prefix", "ecommerce-app"]
